  "extensionDependencies": [
    "JuanBlanco.solidity",
    "ms-vscode.azure-account"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run compile"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint",
      "prettier --write",
      "git add"
    ]
  }
